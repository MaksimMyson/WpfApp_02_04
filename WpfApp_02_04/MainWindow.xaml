<Window x:Class="WpfApp_02_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBox x:Name="FilePathTextBox" Margin="0 0 0 5" VerticalContentAlignment="Center" materialDesign:HintAssist.Hint="Шлях до файлу"/>
            <Button Content="Переглянути" Click="BrowseButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBox x:Name="FileContentTextBox" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
    </Grid>
</Window>

